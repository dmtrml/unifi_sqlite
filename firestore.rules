/**
 * @fileOverview Firestore Security Rules for a personal finance application.
 *
 * Core Philosophy:
 * This ruleset enforces a strict user-ownership model. Each user has complete control over their own data,
 * including transactions, categories, budgets, and recurring transactions.  No data is shared between users.
 *
 * Data Structure:
 * Data is organized hierarchically under `/users/{userId}`, where `{userId}` matches the Firebase Authentication UID.
 * Each user has their own subcollections for `transactions`, `categories`, `budgets`, and `recurringTransactions`.
 *
 * Key Security Decisions:
 * - Users can only access data under their own `userId` path.
 * - Data validation is relaxed to allow for rapid prototyping. Only authorization-critical fields are validated.
 * - Listing of user subcollections is allowed only for the owner.
 *
 * Denormalization for Authorization:
 *  N/A - The current structure inherently links all data to a specific user ID within the path.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the request is authenticated.
     * @return {boolean} True if the request is authenticated, false otherwise.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the authenticated user ID matches the provided user ID.
     * @param {string} userId The user ID to compare against.
     * @return {boolean} True if the user is the owner, false otherwise.
     */
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    /**
     * @description Checks if the authenticated user is the owner and the resource exists.
     * @param {string} userId The user ID to compare against.
     * @return {boolean} True if the user is the existing owner, false otherwise.
     */
    function isExistingOwner(userId) {
      return isOwner(userId) && resource != null;
    }

    /**
     * @description Rules for user profiles.
     * @path /users/{userId}
     * @allow (create) User '6KFzzZECR4N20NOIkxAP91qskU32' can create their profile if their auth UID matches.
     * @allow (get) User '6KFzzZECR4N20NOIkxAP91qskU32' can read their profile.
     * @allow (update) User '6KFzzZECR4N20NOIkxAP91qskU32' can update their profile.
     * @allow (delete) User '6KFzzZECR4N20NOIkxAP91qskU32' can delete their profile.
     * @deny (create) User 'OTHER_UID' cannot create a profile under '6KFzzZECR4N20NOIkxAP91qskU32'.
     * @principle Enforces document ownership and validates relational integrity.
     */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false; // User listing is not permitted.
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for user transactions.
     * @path /users/{userId}/transactions/{transactionId}
     * @allow (create) User '6KFzzZECR4N20NOIkxAP91qskU32' can create a transaction under their user ID.
     * @allow (get) User '6KFzzZECR4N20NOIkxAP91qskU32' can read a transaction under their user ID.
     * @allow (list) User '6KFzzZECR4N20NOIkxAP91qskU32' can list transactions under their user ID.
     * @allow (update) User '6KFzzZECR4N20NOIkxAP91qskU32' can update a transaction under their user ID.
     * @allow (delete) User '6KFzzZECR4N20NOIkxAP91qskU32' can delete a transaction under their user ID.
     * @deny (create) User 'OTHER_UID' cannot create a transaction under '6KFzzZECR4N20NOIkxAP91qskU32'.
     * @principle Enforces document ownership.
     */
    match /users/{userId}/transactions/{transactionId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for user categories.
     * @path /users/{userId}/categories/{categoryId}
     * @allow (create) User '6KFzzZECR4N20NOIkxAP91qskU32' can create a category under their user ID.
     * @allow (get) User '6KFzzZECR4N20NOIkxAP91qskU32' can read a category under their user ID.
     * @allow (list) User '6KFzzZECR4N20NOIkxAP91qskU32' can list categories under their user ID.
     * @allow (update) User '6KFzzZECR4N20NOIkxAP91qskU32' can update a category under their user ID.
     * @allow (delete) User '6KFzzZECR4N20NOIkxAP91qskU32' can delete a category under their user ID.
     * @deny (create) User 'OTHER_UID' cannot create a category under '6KFzzZECR4N20NOIkxAP91qskU32'.
     * @principle Enforces document ownership.
     */
    match /users/{userId}/categories/{categoryId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

     /**
      * @description Rules for user budgets.
      * @path /users/{userId}/budgets/{budgetId}
      * @allow (create) User '6KFzzZECR4N20NOIkxAP91qskU32' can create a budget under their user ID.
      * @allow (get) User '6KFzzZECR4N20NOIkxAP91qskU32' can read a budget under their user ID.
      * @allow (list) User '6KFzzZECR4N20NOIkxAP91qskU32' can list budgets under their user ID.
      * @allow (update) User '6KFzzZECR4N20NOIkxAP91qskU32' can update a budget under their user ID.
      * @allow (delete) User '6KFzzZECR4N20NOIkxAP91qskU32' can delete a budget under their user ID.
      * @deny (create) User 'OTHER_UID' cannot create a budget under '6KFzzZECR4N20NOIkxAP91qskU32'.
      * @principle Enforces document ownership.
      */
    match /users/{userId}/budgets/{budgetId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Rules for user recurring transactions.
     * @path /users/{userId}/recurringTransactions/{recurringTransactionId}
     * @allow (create) User '6KFzzZECR4N20NOIkxAP91qskU32' can create a recurring transaction under their user ID.
     * @allow (get) User '6KFzzZECR4N20NOIkxAP91qskU32' can read a recurring transaction under their user ID.
     * @allow (list) User '6KFzzZECR4N20NOIkxAP91qskU32' can list recurring transactions under their user ID.
     * @allow (update) User '6KFzzZECR4N20NOIkxAP91qskU32' can update a recurring transaction under their user ID.
     * @allow (delete) User '6KFzzZECR4N20NOIkxAP91qskU32' can delete a recurring transaction under their user ID.
     * @deny (create) User 'OTHER_UID' cannot create a recurring transaction under '6KFzzZECR4N20NOIkxAP91qskU32'.
     * @principle Enforces document ownership.
     */
    match /users/{userId}/recurringTransactions/{recurringTransactionId} {
      allow get: if isOwner(userId);
      allow list: if isOwner(userId);
      allow create: if isOwner(userId) && request.resource.data.userId == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.userId == resource.data.userId;
      allow delete: if isExistingOwner(userId);
    }
  }
}